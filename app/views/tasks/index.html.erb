<%= Time.now.strftime("%A, %B %d, %Y  %I:%M %p") %>

<p style="color: yellow"><%= notice %></p>

<h1>Tasks</h1>
<button> <%= link_to "New task", new_task_path %> </button>

<div id="tasks">
  <% if @tasks.any? %>
    <% @tasks.each do |task| %>
      <%= render task %>
      <p>
        <%= link_to "Show this task", task %>
      </p>
    <% end %>
  <% else %>
    <p class="task-message">No tasks available.</p>
<% end %>
</div>
